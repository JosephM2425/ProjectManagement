<h1>Formulario para la Creación de Proyectos</h1>

    <% if @project.errors.any? %>
        <div id="error_explanation">
                <h2>
                <%= pluralize(@project.errors.count, "error") %> prohibited this
                post from being saved:</h2>
                <ul>
                    <% @project.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
        </div>
    <% end %>


<%= form_with(model: @project) do |form| %>
    <%= form.text_field :name, class:"form-control", placeholder:"Titulo"%>
    <br>
    <%= form.text_area :description, size: "60x10",class:"form-control", placeholder:"Descripción"%>
    <br>
    <div class="form-row">
        <div class="col">
            <%= form.label 'Fecha de Inicio'%>
            <%= form.date_field :started_at, class:"form-control"%>
        </div>
        <div class="col">
            <%= form.label 'Fecha de Cierre'%>
            <%= form.date_field :ended_at, class:"form-control"%>
        </div>
    </div>
    <br>
    <%= form.select :status, [["Propuesta", :proposal], ["Progreso", :progress], ["Terminado", :finished]],{}, class:'form-control' %>
    <br>
    <%= form.submit 'Enviar', class: 'btn btn-success btn-lg btn-block' %>
<% end %>